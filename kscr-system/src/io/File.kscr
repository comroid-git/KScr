package org.comroid.kscr.io;

public class File implements pipe<str> {
    public str RelativePath { get; init; }
    public str AbsolutePath { get; init; }
    public str Name { get; init; }

    public File(str path) {
        this.RelativePath = path;
        this.AbsolutePath = File.absPath(path);
        this.Name = File.name(path);
    }

    public native str read(int length);
    public native int write(str text);

    public native str absPath(str path);
    public native str name(str path);
    public native byte exists(str path);
    public native byte isDir(str path);
}
